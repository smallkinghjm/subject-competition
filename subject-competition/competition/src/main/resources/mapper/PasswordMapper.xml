<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.glut.competition.mapper.PasswordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.glut.competition.entity.Password">
        <result column="id" property="id" />
        <result column="encrypt_password" property="encryptPassword" />
        <result column="user_id" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        encrypt_password, user_id
    </sql>

    <insert id="passwordSaveBatch" parameterType="org.glut.competition.entity.Password">
        insert into password(encrypt_password,user_id)values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.encryptPassword},#{item.userId})
        </foreach>
    </insert>

</mapper>
